<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
  <main class="max-width">
    <section>
      <h1>Spells</h1>
      <ul>
      <% spells.forEach( spell => { %>
              <li class='spell' data-id='<%=spell._id%>'>
                  <span class='spell_name'><%= spell.name %></span>
                  <span class='spell_level'>
                      <%= spell.level === 0 ? 'cantrip' : spell.level.toString() %>
                  </span>
                  <div class='spell_desc'><%= spell.description %></div>
              </li>
      <% }) %>    
      </ul>

      <h2><%= user.userName %> has <%= spells.length %> total spells.</h2>
    </section>
    
    <section>
      <form action="/spells/createSpell" method='POST'>
        <input type="text" placeholder="Enter a spell name" name='name'>
        <input type="submit">
      </form>
    </section>
    

    <a href="/logout">Logout</a>
  </main>
    

    <script src="js/main.js"></script>
</body>
</html>