<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
  <main class="max-width viewport-wrapper">
    <section>
      <h1 class="spellList-heading">Spells</h1>
      <ul>
      <% spells.forEach( spell => { %>
              <li class='spell' data-id='<%=spell._id%>'>
                <div class="spell-heading">
                  <h3 class='spell-name'><%= spell.name %></h3>
                  <p class='spell-level'>
                      <%= spell.level %> <%= spell.level !== 'Cantrip' ? 'Level' : ""%> - <%= spell.school%>
                  </p>
                </div>
                <div class='divider'></div>
                <div class='spell-desc'>
                  <%= spell.description%> 
                </div>
                <div class="spell-btn-group">
                  <button class='spell-edit'>
                    Edit
                  </button>
                  <button class='spell-del'>
                    Delete
                  </button>
                </div>
              </li>
      <% }) %>    
      </ul>

      <h2><%= user.userName %> has <%= spells.length %> total spells.</h2>
    </section>
    
    <section>
      <form action="/spells/createSpell" method='POST'>
        <input type="text" placeholder="Enter a spell name" name='name'>
        <input type="submit">
      </form>
    </section>
    

    <a href="/logout">Logout</a>
        
    <!--   Modal   -->
    <%- include('./partials/modal'); %>
  </main>
    

    <script src="js/main2.js"></script>
</body>
</html>